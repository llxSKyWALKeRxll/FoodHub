<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/rowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fce4ec"
        android:weightSum="6">

        <ImageView
            android:id="@+id/rowImage"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:src="@drawable/ic_food_icon"/>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3"
            android:background="#f8bbd0">

            <TextView
                android:id="@+id/rowName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Restaurant Name"
                android:padding="2dp"
                android:layout_marginHorizontal="2dp"/>

            <TextView
                android:id="@+id/rupeeSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:layout_below="@id/rowName"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="â‚¹"
                android:padding="2dp"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:id="@+id/rowPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColor="@color/gray"
                android:layout_toRightOf="@id/rupeeSymbol"
                android:layout_below="@id/rowName"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="300/person"
                android:padding="2dp"
                android:layout_marginHorizontal="2dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/favHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_favourite"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/rowRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/favHeart"
                android:layout_marginTop="25dp"
                android:textColor="@color/gold"
                android:text="5.0"
                android:textSize="16sp"
                android:padding="2dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>