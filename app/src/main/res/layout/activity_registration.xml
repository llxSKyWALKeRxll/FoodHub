<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="#f0f4c3">

    <EditText
        android:id="@+id/etxtRegName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name (minimum 3 characters)"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/etxtRegMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxtRegName"
        android:hint="Email Address"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etxtRegNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxtRegMail"
        android:hint="Mobile Number (10 digits)"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:inputType="number"
        android:maxLength="10"/>

    <EditText
        android:id="@+id/etxtRegAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Home Address"
        android:layout_below="@id/etxtRegNumber"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etxtRegPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password (minimum 4 characters)"
        android:layout_below="@id/etxtRegAddress"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etxtRegPwdCnf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:layout_below="@id/etxtRegPwd"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="15dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/etxtRegPwdCnf"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:padding="10dp"/>

</RelativeLayout>